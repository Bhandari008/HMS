<section class = "book" id = "book">
    <h1 class = "heading"><span>book</span>now</h1>
    <div class = "row d-flex justify-content-center">
        <div class = "image">
            <img src = "/image/book-img.svg" alt = "" />
        </div>
        <form asp-action="Create" asp-controller="Appointment" method="post">
            <h3>Book Appointment</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label text-size"></label>
                <input asp-for="Description" class="form-control box" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Schedule" class="control-label text-size"></label>
                <input  asp-for="Schedule" class="form-control box" type="datetime-local"/>
                <span asp-validation-for="Schedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label text-size">Choose Department</label>
                <select asp-for="DepartmentId" asp-items="departments" class="form-control box"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input type="hidden" asp-for="isActive" class="form-control" value="True" />               
            </div>
             <div class="form-group">               
                <input asp-for="Condition" class="form-control" type="hidden" value="Pending"/>    
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</section>
