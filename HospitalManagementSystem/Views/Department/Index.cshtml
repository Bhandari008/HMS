@model List<DepartmentModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<section>


<table class="table text-size">
    <thead>
        <tr>
            <th>
                DepartmentId
            </th>
            <th>
                DepartmentName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (DepartmentModel item in Model) {
        <tr class = "text-size">
            <td>
                @item.Id
            </td>
            <td>
                @item.DName
            </td>
            <td>
                <a class="btn btn-primary btn-lg p-3" href = "/Department/Delete?id=@item.Id">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
</section>