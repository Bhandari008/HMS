@model RoleModel
@{
    ViewData["Title"] = "Assign Role";
    List<SelectListItem> users = (List<SelectListItem>)ViewBag.Users;
    List<SelectListItem> roles = (List<SelectListItem>)ViewBag.Roles;
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRole" asp-controller="Account" method="post">
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="users" class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" asp-items="roles" class="form-control"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Role" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
