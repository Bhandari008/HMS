@model HospitalManagementSystem.Models.UserModel

@{
    ViewData["Title"] = "Login";
}

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form asp-action="Register" asp-controller="Account" method="post" class="mx-1 mx-md-4">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label asp-for="Username" class="form-label">UserName</label>
                      <input asp-for="Username" type="text"  class="form-control" />
                      <span asp-validation-for="Username" class="text-danger"></span>
                      
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label asp-for="FullName" class="form-label">FullName</label>
                      <input asp-for="FullName" type="text"  class="form-control" />
                      <span asp-validation-for="FullName" class="text-danger"></span>
                      
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                      <input asp-for="PhoneNumber" type="text"  class="form-control" />
                      <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                      
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                       <label asp-for="Password" class="form-label" >Password</label>
                      <input type="password" asp-for="Password" id="form3Example4c" class="form-control" />
                      
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                      <input asp-for="ConfirmPassword" type="password" id="form3Example4cd" class="form-control" />    
                    </div>
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <input type = "submit" value="Register" class="btn btn-primary btn-lg"/>
                  </div>
                  <p class="text-center mb-5 mx-1 mx-md-4 mt-4">Already, Have an Account? <a href = "/Account/Login">Login</a></p>
                </form>
              </div>                
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
