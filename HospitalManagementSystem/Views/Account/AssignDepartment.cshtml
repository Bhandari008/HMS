@model HospitalManagementSystem.Models.ApplicationUser

@{
    ViewData["Title"] = "Assign Department";
    List<SelectListItem> doctorsList = ViewBag.Doctors;
    List<SelectListItem> departmentList = ViewBag.Departments;
}

<h1>AssignDepartment</h1>

<h4>DoctorModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignDepartment" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Doctor Name</label>
                <select asp-for="Id" asp-items="doctorsList" class="form-control"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="DepartmentId" class="control-label">Department Name</label>
                <select asp-for="DepartmentId" asp-items="departmentList" class="form-control"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
