@model HospitalManagementSystem.Models.ApplicationUser

@{
    ViewData["Title"] = "Assign Department";
    List<SelectListItem> doctorsList = ViewBag.Doctors;
    List<SelectListItem> departmentList = ViewBag.Departments;
}

<h1>AssignDepartment</h1>

<h4>DoctorModel</h4>
<hr />
<section class = "book">
    <div class="row d-flex">
        <div class="col-md-4 container">
            
            <form asp-action="AssignDepartment" asp-controller="Account" method="post">
                <h3>Assign Department</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group-0 mt-4">
                    <label asp-for="Id" class="control-label text-size">Doctor Name</label>
                    <select asp-for="Id" asp-items="doctorsList" class="form-control box"></select>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="DepartmentId" class="control-label text-size">Department Name</label>
                    <select asp-for="DepartmentId" asp-items="departmentList" class="form-control box"></select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Assign" class="btn btn-primary mt-4" />
                </div>
            </form>
        </div>
    </div>
</section>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
