@model ApplicationUser

@{
    ViewData["Title"] = "DoctorProfile";
    List<DepartmentModel> department = ViewBag.Department;
    List<AppointmentModel> appointments = ViewBag.Appointment;
}

<section style="background-color: #eee;">
  <div class="container py-5 mt-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">           
          <div class="card-body text-center">           
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">Dr. @Model.FullName</h5>
            <p class="text-muted mb-1">@department[0].DepartmentName</p>
            <p class="text-muted mb-4">@Model.UserName</p>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.FullName</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">UserName</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.UserName</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.PhoneNumber</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">Kathmandu, Nepal</p>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
</section>
<h2>Your Appointment Details</h2>
<table class = "table">
         <thead>
             <tr>
                 <th>Id</th>
                 <th>Description</th>
                 <th>UserId</th>
                 <th>Schedule</th>
             </tr>
         </thead>
         <tbody>
        @foreach(var items in appointments)
        {
            if(items.Condition == "Approved")
            {
             <tr>
                <td>@items.Id</td>
                <td>@items.Description</td>
                <td>@items.UserId</td>
                <td>@items.Schedule</td>
            </tr>
            }
        }
    </tbody>
</table> 



